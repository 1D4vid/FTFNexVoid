local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- Seleciona o local correto para injetar a UI
local viewport = (gethui and gethui()) or (getgenv and getgenv().gethui and getgenv().gethui()) or CoreGui

-- Limpa a UI antiga se existir
if viewport:FindFirstChild("NexVoidMaintenance") then
    viewport.NexVoidMaintenance:Destroy()
end

-- ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "NexVoidMaintenance"
ScreenGui.Parent = viewport
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.IgnoreGuiInset = true

-- Frame Principal
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.Size = UDim2.new(0, 420, 0, 320) -- Tamanho fixo, o conte√∫do se adapta
MainFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 22) -- Fundo escuro moderno
MainFrame.BorderSizePixel = 0
MainFrame.ClipsDescendants = true

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 14)
UICorner.Parent = MainFrame

-- Usando UIScale para uma anima√ß√£o perfeita (n√£o estica as letras)
local UIScale = Instance.new("UIScale")
UIScale.Parent = MainFrame
UIScale.Scale = 0 -- Come√ßa invis√≠vel

-- Borda Animada (Glow)
local UIStroke = Instance.new("UIStroke")
UIStroke.Parent = MainFrame
UIStroke.Thickness = 2
UIStroke.Color = Color3.fromRGB(255, 255, 255)
UIStroke.Transparency = 0.2

local StrokeGradient = Instance.new("UIGradient")
StrokeGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0.00, Color3.fromRGB(255, 255, 255)),
    ColorSequenceKeypoint.new(0.50, Color3.fromRGB(30, 30, 40)),
    ColorSequenceKeypoint.new(1.00, Color3.fromRGB(255, 255, 255))
}
StrokeGradient.Parent = UIStroke

-- Sistema de Organiza√ß√£o Autom√°tica (Evita que o texto bugue)
local Padding = Instance.new("UIPadding")
Padding.Parent = MainFrame
Padding.PaddingTop = UDim.new(0, 25)
Padding.PaddingBottom = UDim.new(0, 20)
Padding.PaddingLeft = UDim.new(0, 25)
Padding.PaddingRight = UDim.new(0, 25)

local Layout = Instance.new("UIListLayout")
Layout.Parent = MainFrame
Layout.SortOrder = Enum.SortOrder.LayoutOrder
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
Layout.Padding = UDim.new(0, 15) -- Espa√ßamento entre os textos

-- T√≠tulo
local Title = Instance.new("TextLabel")
Title.Parent = MainFrame
Title.BackgroundTransparency = 1
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Font = Enum.Font.GothamBlack
Title.Text = "MAINTENANCE"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 24
Title.LayoutOrder = 1

-- Descri√ß√£o Principal
local Description = Instance.new("TextLabel")
Description.Parent = MainFrame
Description.BackgroundTransparency = 1
Description.Size = UDim2.new(1, 0, 0, 0)
Description.AutomaticSize = Enum.AutomaticSize.Y -- Cresce automaticamente
Description.Font = Enum.Font.GothamMedium
Description.Text = "NexVoid is currently under maintenance.\nPlease wait for the next few hours."
Description.TextColor3 = Color3.fromRGB(180, 180, 180)
Description.TextSize = 15
Description.TextWrapped = true
Description.LayoutOrder = 2

-- Linha Divis√≥ria
local Divider = Instance.new("Frame")
Divider.Parent = MainFrame
Divider.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Divider.BackgroundTransparency = 0.85
Divider.Size = UDim2.new(0.8, 0, 0, 1)
Divider.BorderSizePixel = 0
Divider.LayoutOrder = 3

-- Informa√ß√µes Extras (Aviso sobre Bugs)
local ExtraInfo = Instance.new("TextLabel")
ExtraInfo.Parent = MainFrame
ExtraInfo.BackgroundTransparency = 1
ExtraInfo.Size = UDim2.new(1, 0, 0, 0)
ExtraInfo.AutomaticSize = Enum.AutomaticSize.Y -- A M√ÅGICA AQUI: Cresce conforme o tamanho do texto, nunca corta!
ExtraInfo.Font = Enum.Font.Gotham
ExtraInfo.Text = "üáßüá∑ - Houve um atraso na atualiza√ß√£o por bugs inesperados, em breve NexVoid estar√° de volta!!\n\nüá∫üá∏ - There was a delay in the update due to unexpected bugs, NexVoid will be back soon!!"
ExtraInfo.TextColor3 = Color3.fromRGB(200, 200, 200)
ExtraInfo.TextSize = 13
ExtraInfo.TextWrapped = true
ExtraInfo.LayoutOrder = 4

-- Espa√ßador invis√≠vel para empurrar o bot√£o
local Spacer = Instance.new("Frame")
Spacer.Parent = MainFrame
Spacer.BackgroundTransparency = 1
Spacer.Size = UDim2.new(1, 0, 0, 5)
Spacer.LayoutOrder = 5

-- Bot√£o de Fechar
local CloseButton = Instance.new("TextButton")
CloseButton.Name = "CloseBtn"
CloseButton.Parent = MainFrame
CloseButton.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
CloseButton.Size = UDim2.new(0.6, 0, 0, 38)
CloseButton.Font = Enum.Font.GothamBold
CloseButton.Text = "CLOSE"
CloseButton.TextColor3 = Color3.fromRGB(20, 20, 20)
CloseButton.TextSize = 14
CloseButton.AutoButtonColor = false
CloseButton.LayoutOrder = 6

local BtnCorner = Instance.new("UICorner")
BtnCorner.CornerRadius = UDim.new(0, 6)
BtnCorner.Parent = CloseButton

-- ================= LOGICA DE ARRASTAR (DRAGGABLE) ================= --
local dragging, dragInput, dragStart, startPos

MainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

MainFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- ================= ANIMA√á√ïES ================= --

-- Gira o degrad√™ da borda
local rot = 0
local connection
connection = RunService.RenderStepped:Connect(function(deltaTime)
    if not MainFrame.Parent then 
        if connection then connection:Disconnect() end
        return 
    end
    rot = (rot + (60 * deltaTime)) % 360
    StrokeGradient.Rotation = rot
end)

-- Anima√ß√£o de entrada (Pop-up suave)
local PopInTween = TweenService:Create(UIScale, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Scale = 1})
PopInTween:Play()

-- Efeitos Hover no Bot√£o
CloseButton.MouseEnter:Connect(function() 
    TweenService:Create(CloseButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(255, 255, 255)}):Play() 
end)

CloseButton.MouseLeave:Connect(function() 
    TweenService:Create(CloseButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(240, 240, 240)}):Play() 
end)

-- Fechar a UI
CloseButton.MouseButton1Click:Connect(function()
    if connection then connection:Disconnect() end
    
    -- Anima√ß√£o de sa√≠da (Encolhe)
    local CloseTween = TweenService:Create(UIScale, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Scale = 0})
    CloseTween:Play()
    
    -- Some com o frame junto
    TweenService:Create(MainFrame, TweenInfo.new(0.3), {BackgroundTransparency = 1}):Play()
    TweenService:Create(UIStroke, TweenInfo.new(0.3), {Transparency = 1}):Play()
    
    CloseTween.Completed:Wait()
    ScreenGui:Destroy()
end)
