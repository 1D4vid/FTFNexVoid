local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")

local viewport = (gethui and gethui()) or (getgenv and getgenv().gethui and getgenv().gethui()) or CoreGui

if viewport:FindFirstChild("NexVoidMaintenance") then
    viewport.NexVoidMaintenance:Destroy()
end

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "NexVoidMaintenance"
ScreenGui.Parent = viewport
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.IgnoreGuiInset = true

local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.Size = UDim2.new(0, 0, 0, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
MainFrame.BorderSizePixel = 0
MainFrame.ZIndex = 1

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = MainFrame

local UIStroke = Instance.new("UIStroke")
UIStroke.Parent = MainFrame
UIStroke.Thickness = 3
UIStroke.Color = Color3.fromRGB(255, 255, 255)

local StrokeGradient = Instance.new("UIGradient")
StrokeGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0.00, Color3.fromRGB(255, 255, 255)),
    ColorSequenceKeypoint.new(0.50, Color3.fromRGB(50, 50, 50)),
    ColorSequenceKeypoint.new(1.00, Color3.fromRGB(255, 255, 255))
}
StrokeGradient.Rotation = 45
StrokeGradient.Parent = UIStroke

local Background = Instance.new("ImageLabel")
Background.Parent = MainFrame
Background.Size = UDim2.new(1, 0, 1, 0)
Background.Image = "rbxassetid://98571821923947"
Background.ScaleType = Enum.ScaleType.Crop
Background.BackgroundTransparency = 1
Background.ImageTransparency = 0.9
Background.ImageColor3 = Color3.fromRGB(200, 200, 200)
Background.ZIndex = 1

local BgCorner = Instance.new("UICorner")
BgCorner.CornerRadius = UDim.new(0, 12)
BgCorner.Parent = Background

local Title = Instance.new("TextLabel")
Title.Parent = MainFrame
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0, 0, 0.1, 0)
Title.Size = UDim2.new(1, 0, 0, 35)
Title.Font = Enum.Font.GothamBlack
Title.Text = "MAINTENANCE"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 26
Title.TextTransparency = 1
Title.TextStrokeTransparency = 0
Title.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
Title.ZIndex = 2

local TextGradient = Instance.new("UIGradient")
TextGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0.00, Color3.fromRGB(255, 255, 255)),
    ColorSequenceKeypoint.new(1.00, Color3.fromRGB(100, 100, 100))
}
TextGradient.Rotation = 90
TextGradient.Parent = Title

local Description = Instance.new("TextLabel")
Description.Parent = MainFrame
Description.BackgroundTransparency = 1
Description.Position = UDim2.new(0.1, 0, 0.35, 0)
Description.Size = UDim2.new(0.8, 0, 0, 40)
Description.Font = Enum.Font.Gotham
Description.Text = "NexVoid is currently under maintenance.\nWe will be back shortly."
Description.TextColor3 = Color3.fromRGB(200, 200, 200)
Description.TextSize = 14
Description.TextStrokeTransparency = 0.5
Description.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
Description.TextWrapped = true
Description.TextTransparency = 1
Description.ZIndex = 2

local CloseButton = Instance.new("TextButton")
CloseButton.Name = "CloseBtn"
CloseButton.Parent = MainFrame
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.Position = UDim2.new(0.25, 0, 0.7, 0)
CloseButton.Size = UDim2.new(0.5, 0, 0, 35)
CloseButton.Font = Enum.Font.GothamBlack
CloseButton.Text = "CLOSE"
CloseButton.TextColor3 = Color3.fromRGB(10, 10, 10)
CloseButton.TextSize = 14
CloseButton.AutoButtonColor = false
CloseButton.BackgroundTransparency = 0
CloseButton.TextTransparency = 1
CloseButton.ZIndex = 10

local BtnCorner = Instance.new("UICorner")
BtnCorner.CornerRadius = UDim.new(0, 8)
BtnCorner.Parent = CloseButton

local BtnGradient = Instance.new("UIGradient")
BtnGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0.00, Color3.fromRGB(255, 255, 255)),
    ColorSequenceKeypoint.new(1.00, Color3.fromRGB(150, 150, 150))
}
BtnGradient.Rotation = 90
BtnGradient.Parent = CloseButton

local rot = 0
local connection
connection = RunService.RenderStepped:Connect(function()
    if not MainFrame.Parent then 
        if connection then connection:Disconnect() end
        return 
    end
    rot = rot + 2
    StrokeGradient.Rotation = rot
end)

local PopUpInfo = TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
TweenService:Create(MainFrame, PopUpInfo, {Size = UDim2.new(0, 350, 0, 200)}):Play()

task.wait(0.4)

local function FadeIn(obj)
    TweenService:Create(obj, TweenInfo.new(0.5), {TextTransparency = 0}):Play()
end

FadeIn(Title)
task.wait(0.1)
FadeIn(Description)
task.wait(0.1)
FadeIn(CloseButton)

CloseButton.MouseButton1Click:Connect(function()
    if connection then connection:Disconnect() end
    
    local ClickInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In)
    TweenService:Create(Title, ClickInfo, {TextTransparency = 1}):Play()
    TweenService:Create(Description, ClickInfo, {TextTransparency = 1}):Play()
    TweenService:Create(CloseButton, ClickInfo, {TextTransparency = 1, BackgroundTransparency = 1}):Play()
    
    local CloseTween = TweenService:Create(MainFrame, ClickInfo, {Size = UDim2.new(0, 0, 0, 0)})
    CloseTween:Play()
    TweenService:Create(UIStroke, ClickInfo, {Transparency = 1}):Play()
    
    CloseTween.Completed:Wait()
    ScreenGui:Destroy()
end)

CloseButton.MouseEnter:Connect(function() 
    TweenService:Create(CloseButton, TweenInfo.new(0.2), {Size = UDim2.new(0.52, 0, 0, 37)}):Play() 
end)

CloseButton.MouseLeave:Connect(function() 
    TweenService:Create(CloseButton, TweenInfo.new(0.2), {Size = UDim2.new(0.5, 0, 0, 35)}):Play() 
end)
